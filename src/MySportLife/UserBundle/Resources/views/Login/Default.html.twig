{% extends 'MSLTwigBundle::layout.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <body class="login-layout">
        <div class="main-container container-fluid">
            <div class="main-content">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="login-container">
                            <div class="row-fluid">
                                <div class="center">
                                    <h1>
                                        <i class="icon-leaf green"></i>
                                        <span class="red">{{ app_application_name}}</span>
                                    </h1>
                                    <h4 class="blue">{{ app_webmaster }}</h4>
                                </div>
                            </div>

                            <div class="space-6"></div>

                            <div class="row-fluid">
                                <div class="position-relative">
                                    {% include 'MSLUserBundle:Login:login.html.twig' %}<!--/login-box-->

                                    {% include 'MSLUserBundle:Login:forgot.html.twig' %}<!--/forgot-box-->

                                    {% include 'MSLUserBundle:Login:sign-up.html.twig' %}<!--/signup-box-->
                                </div><!--/position-relative-->
                            </div>
                        </div>
                    </div><!--/.span-->
                </div><!--/.row-fluid-->
            </div>
        </div><!--/.main-container-->

        {% block javascripts %}
            {{ parent() }}
        {% endblock %}
        <!--inline scripts related to this page-->

        <script type="text/javascript">
            function show_box(id) {
                $('.widget-box.visible').removeClass('visible');
                $('#' + id).addClass('visible');
            }
        </script>
    </body>
{% endblock %}